<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_post_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/item_offset"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/grid_post_item_image"
        android:src="@color/md_blue_A400"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="160dp" />
    <View
        android:layout_alignParentBottom="true"
        android:background="@drawable/carousel_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/grid_post_item_title"
        android:layout_alignParentBottom="true"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>