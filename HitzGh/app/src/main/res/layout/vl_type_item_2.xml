<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/verticalListTypeItem2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/vl_cardview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/img_container_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/vl_imgview_2"
                    android:transitionName="feat_img"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@color/md_blue_A400"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/videoIcon"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/vl_category_cardview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="145dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="@color/md_orange_A400">

                <TextView
                    android:id="@+id/vl_category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#FFF"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="@string/dummy_category" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/vl_textview_2"
                android:layout_below="@id/img_container_2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_title"
                fontPath="fonts/RobotoCondensed-Regular.ttf"
                android:textColor="@color/primaryTextColor"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"/>

        </RelativeLayout>

        <View
            android:id="@+id/vl2_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dividerColor"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
