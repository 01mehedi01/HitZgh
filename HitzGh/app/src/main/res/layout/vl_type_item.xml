<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verticalListTypeItem"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/vl_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:clickable="false"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <TextView
            android:id="@+id/vl_title"
            fontPath="fonts/RobotoCondensed-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primaryTextColor"
            android:text="@string/dummy_title"
            android:textSize="18sp"
            tools:ignore="MissingPrefix" />

            <RelativeLayout
                android:id="@+id/img_container_1"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/vl_image"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@color/md_blue_A400" />

                <ImageView
                    android:id="@+id/play_icon"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_play_circle_outline_black_24dp"/>

            </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/vl_category_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardElevation="0dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/md_red_500">

            <TextView
                android:id="@+id/vl_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#FFF"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="@string/dummy_category" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

        <View
            android:id="@+id/vl2_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dividerColor"/>
    </android.support.v7.widget.CardView>

</LinearLayout>