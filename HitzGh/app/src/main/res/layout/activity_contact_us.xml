<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.app.hitxghbeta.ContactUSActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/contactus_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/webviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="Contact us "
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:textColor="#FFF"
                    android:textSize="20sp" />


            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button

            android:background="@drawable/call_us"
            android:textAlignment="center"
            android:src="@drawable/call_us"
            android:id="@+id/contacby_phone"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:onClick="CallUsButtonPress"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:background="@drawable/whatsapp"
            android:scaleType="fitXY"
            android:textAlignment="center"
            android:src="@drawable/call_us"
            android:id="@+id/contacby_whataapp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:onClick="WhatsappButtonPress"/>

    </LinearLayout>
    <LinearLayout
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:background="@drawable/email_us"
            android:scaleType="fitXY"
            android:textAlignment="center"
            android:src="@drawable/call_us"
            android:id="@+id/contacby_email"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:onClick="EmailUsButtonPress"/>

    </LinearLayout>
</LinearLayout>
