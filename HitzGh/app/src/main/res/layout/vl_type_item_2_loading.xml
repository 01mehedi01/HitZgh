<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/verticalListTypeItem2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:clickable="false"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp">

            <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vl_imgview_2_loading"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@color/md_grey_300"
                android:scaleType="centerCrop"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="145dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="@color/md_grey_400">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/md_grey_400"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:text="@string/dummy_category" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_below="@id/vl_imgview_2_loading"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_300"
                android:background="@color/md_grey_300"
                fontPath="fonts/RobotoCondensed-Regular.ttf"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dividerColor" />

    </android.support.v7.widget.CardView>

</LinearLayout>
